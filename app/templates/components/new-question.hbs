{{#if addNewQuestion}}
  <h3>New question</h3>
  <div>
  <form>
    <div class="form-group">
      <label for="content">Enter your question:</label>
      {{input value=content id="content"}}
    </div>

    <div class="form-group">
      <label for="author">Author</label>
      {{input value=author id="author"}}
    </div>

    <div class="form-group">
      <label for="date">Date</label>
      {{input value=date id="date"}}
    </div>

    <div class="form-group">
      <label for="note">Additional notes or specific subject</label>
      {{input value=note id="note"}}
    </div>

    <button {{action 'saveQuestion'}}>Save</button>
  </form>
  </div>
{{else}}
  <button {{action 'questionFormShow'}}>New question</button>
{{/if}}
